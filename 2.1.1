public class Max3Calculator {

    public static int max3(int a, int b, int c) {
        int max = a;
        if (b > max) max = b;
        if (c > max) max = c;
        return max;
    }

    public static double max3(double a, double b, double c) {
        double max = a;
        if (b > max) max = b;
        if (c > max) max = c;
        return max;
    }

    public static void main(String[] args) {
        System.out.println("Max of (3, 7, 5): " + max3(3, 7, 5));

        System.out.println("Max of (2.5, 3.1, 1.8): " + max3(2.5, 3.1, 1.8));
    }
}
